html,
body,
.app,
.page {
  height 100%
}
body {
  background-color #EEE
  font-family Arial, -apple-system-font, 'Helvetica Neue', sans-serif !important
}
.weui-tabbar__icon {
  width 30px !important
}
.vux-tab-warp.tab-icon {
  padding-top 60px
  .vux-tab-container {
    height 60px
    .vux-tab {
      height 60px
      .vux-tab-item {
        line-height 16px
        padding-top 10px
        .icon {
          height 24px
          line-height 24px
          i {
            font-size 24px
          }
        }
        .label {
          font-size 12px
          line-height 16px
        }
      }
    }
  }
}
.vux-indicator.swiper-control-dot {
  bottom 5px !important
}

.article {
  // border-radius 5px
  // margin 10px
  background-color #fff
  .article-head {
    padding 20px 10px 10px
    border-bottom 1px dotted #EEE
    text-align center
    h1 {
      font-size 20px
      font-weight normal
      padding-bottom 10px
    }
    .atricle-head-attr {
      color #999
      font-size 12px
      span {
        padding 0 10px
      }
    }
  }
  .article-body {
    padding 20px
    p {
      margin 1em 0
      word-wrap break-word
      word-break break-all
      &:first-child {
        margin-top 0
      }
      &:last-child {
        margin-bottom 0
      }
    }
    img {
      max-width 100%
    }
  }
}
